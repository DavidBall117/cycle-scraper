{
  "name": "cycle-scraper",
  "version": "1.0.0",
  "description": "Notify user if bicycle is in stock at Paramount Sports.",
  "main": "dist/app.js",
  "repository": "https://github.com/DavidBall117/cycle-scraper.git",
  "author": "David Ball",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "tsc && node dist/app.js",
    "dev": "nodemon src/app.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "conflict-check": "tslint-config-prettier-check ./tslint.json"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  },
  "lint-format": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add *"
    ]
  }
}